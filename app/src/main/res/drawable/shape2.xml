<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="@color/pomegranate"
                android:endColor="@color/pomegranate"
                android:angle="270" />
            <corners
                android:radius="10dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:endColor="@color/alizarin"
                android:startColor="@color/alizarin"
                android:angle="270" />
            <corners
                android:radius="10dp" />
        </shape>
    </item>
</selector>