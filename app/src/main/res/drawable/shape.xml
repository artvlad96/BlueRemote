<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
           <gradient
                android:startColor="#80bdc3c7"
                android:endColor="#80bdc3c7"
                android:angle="270" />
            <corners
                android:radius="10dp" />
            <stroke android:width="5px" android:color="#802c3e50" />
        </shape>
    </item>

    <item>
        <shape>
            <corners
                android:radius="10dp" />
            <stroke android:width="5px" android:color="#FFFFFF" />
        </shape>
    </item>
</selector>
