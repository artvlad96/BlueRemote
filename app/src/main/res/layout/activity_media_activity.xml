<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:rowCount="3"
    android:columnCount="4"
    tools:context="com.blueremote.blueremote.MediaActivity"
    android:id="@+id/media_lay"
    android:clickable="true"
    android:layout_gravity="center"
    android:layout_centerHorizontal="true"
    >

    <Button
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/rewind_btn"
        android:background="@android:color/transparent"
        android:id="@+id/prevBtn"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_margin="10dp"/>

    <Button
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/player_btn"
        android:background="@android:color/transparent"
        android:id="@+id/mediaPlayerBtn"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_margin="10dp"/>

    <Button
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/play_btn"
        android:background="@android:color/transparent"
        android:id="@+id/playbtn"
        android:layout_row="2"
        android:layout_column="1"
        android:layout_margin="10dp"/>

    <Button
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/volume_up"
        android:drawableTop="@drawable/volume_up_btn"
        android:background="@android:color/transparent"
        android:layout_row="1"
        android:layout_column="2"
        android:layout_margin="10dp"/>

    <Button
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/volume_mute"
        android:drawableTop="@drawable/volume_mute_btn"
        android:background="@android:color/transparent"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_margin="10dp"
     />

    <Button
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/volume_down"
        android:drawableTop="@drawable/volume_down_btn"
        android:background="@android:color/transparent"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_margin="10dp"/>

    <Button
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/forw_btn"
        android:background="@android:color/transparent"
        android:id="@+id/nextbtn"
        android:layout_row="2"
        android:layout_column="2"
        android:layout_margin="10dp"/>

</GridLayout>
