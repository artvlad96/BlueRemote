<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.blueremote.blueremote.KeyboardActivity"
    android:rowCount="6"
    android:columnCount="4"
    android:layout_gravity="center"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <Button
            android:layout_gravity="fill"
            android:text="UP"
            android:id="@+id/btnUp"
            android:background="@drawable/shape"
            android:layout_margin="3dp"
            android:layout_row="0"
            android:layout_column="1"
        android:layout_height="70dp"
        android:textColor="#ffffffff"
        android:textSize="@dimen/abc_text_size_button_material" />

        <Button
            android:layout_gravity="fill"
            android:text="left"
            android:id="@+id/btnLeft"
            android:background="@drawable/shape"
            android:layout_margin="3dp"
            android:layout_row="1"
            android:layout_column="0"
            android:textColor="#ffffffff"
            android:textSize="@dimen/abc_text_size_button_material" />

    <Button
            android:layout_gravity="fill"
            android:text="down"
            android:id="@+id/btnDown"
            android:background="@drawable/shape"
            android:layout_margin="3dp"
            android:layout_row="2"
            android:layout_column="1"
        android:layout_height="70dp"
        android:textColor="#ffffffff"
        android:textSize="@dimen/abc_text_size_button_material" />

    <Button
        android:layout_gravity="fill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape2"
        android:text="wind"
        android:id="@+id/alt_tab"
        android:textSize="@dimen/abc_text_size_button_material"
        android:layout_margin="3dp"
        android:layout_row="2"
        android:layout_column="2"
        android:textColor="#ffffffff" />

    <Button
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/calc_btn"
        android:background="@android:color/transparent"
        android:id="@+id/btnCalc"
        android:layout_row="3"
        android:layout_column="2"
        android:layout_marginTop="20dp"/>

        <Button
            android:layout_gravity="fill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape2"
            android:text="BACK"
            android:id="@+id/btnBack"
            android:layout_margin="3dp"
            android:layout_row="0"
            android:layout_column="0"
            android:textColor="#ffffffff"
            android:textSize="@dimen/abc_text_size_button_material" />

        <Button
            android:layout_gravity="fill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape2"
            android:text="forw"
            android:id="@+id/btnForw"
            android:layout_margin="3dp"
            android:layout_row="0"
            android:layout_column="2"
            android:textColor="#ffffffff"
            android:textSize="@dimen/abc_text_size_button_material" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="ENTER"
        android:id="@+id/btnStart"
        android:clickable="true"
        android:enabled="true"
        android:background="@drawable/shape"
        android:layout_margin="3dp"
        android:layout_row="1"
        android:layout_column="1"
        android:textColor="#ffffffff"
        android:textSize="@dimen/abc_text_size_button_material" />

    <Button
        android:layout_gravity="fill"
        android:text="right"
        android:id="@+id/btnRight"
        android:background="@drawable/shape"
        android:layout_margin="3dp"
        android:layout_row="1"
        android:layout_column="2"
        android:layout_width="match_parent"
        android:textColor="#ffffffff"
        android:textSize="@dimen/abc_text_size_button_material" />

    <Button
            android:layout_gravity="fill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape2"
            android:text="CLOSE"
            android:id="@+id/btnClose"
            android:layout_margin="3dp"
            android:layout_row="2"
            android:layout_column="0"
        android:textColor="#ffffffff"
        android:textSize="@dimen/abc_text_size_button_material" />

    <Button
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/expl_btn"
        android:background="@android:color/transparent"
        android:id="@+id/btnExpl"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_marginTop="20dp"/>

    <Button
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/brow_btn"
        android:background="@android:color/transparent"
        android:id="@+id/btnBrowser"
        android:layout_row="3"
        android:layout_column="1"
        android:layout_marginTop="20dp"/>

    <Button
        android:layout_gravity="fill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/start_btn"
        android:background="@android:color/transparent"
        android:id="@+id/puskBtn"
        android:layout_row="5"
        android:layout_column="0" />

    <Button
        android:layout_gravity="fill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/note_btn"
        android:background="@android:color/transparent"
        android:id="@+id/noteBtn"
        android:layout_row="5"
        android:layout_column="1" />

    <Button
        android:layout_gravity="fill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/power_btn"
        android:background="@android:color/transparent"
        android:id="@+id/shutButn"
        android:layout_row="5"
        android:layout_column="2" />

</GridLayout>
